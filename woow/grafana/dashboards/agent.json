{
  "title": "Tennis MCP Agent",
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "P/L Total",
      "targets": [
        {
          "expr": "pnl_total"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "ROI",
      "targets": [
        {
          "expr": "roi_total"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Daily Bets",
      "targets": [
        {
          "expr": "daily_bets"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Daily PNL",
      "targets": [
        {
          "expr": "daily_pnl"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      }
    },
    {
      "type": "graph",
      "title": "MCP Evaluations / s",
      "targets": [
        {
          "expr": "rate(mcp_evaluations_total[5m])"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      }
    },
    {
      "type": "graph",
      "title": "Recommendations",
      "targets": [
        {
          "expr": "sum by (rec) (rate(mcp_recommendations_total[5m]))"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      }
    },
    {
      "type": "graph",
      "title": "Orders (placed vs matched)",
      "targets": [
        {
          "expr": "sum by (side) (rate(orders_placed_total[5m]))"
        },
        {
          "expr": "sum by (side) (rate(orders_matched_total[5m]))"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      }
    },
    {
      "type": "graph",
      "title": "Edge (p90)",
      "targets": [
        {
          "expr": "histogram_quantile(0.9, sum(rate(mcp_edge_bucket[5m])) by (le))"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      }
    },
    {
      "type": "graph",
      "title": "Pending Exposure",
      "targets": [
        {
          "expr": "pending_exposure"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      }
    }
  ],
  "time": {
    "from": "now-24h",
    "to": "now"
  }
}
